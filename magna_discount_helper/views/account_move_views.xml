<?xml version="1.0"?>
<odoo>
    <data>

    <record id="magna_view_move_form_discount" model="ir.ui.view">
        <field name="name">magna.view_move_form_discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <group>
                    <group>
                        <field name="my_discount"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</data>
</odoo>
