<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_line_beta_wzd_form">
            <field name="name">account.line.beta.wzd.form</field>
            <field name="model">account.line.beta.wzd</field>
            <field name="arch" type="xml">
                <form string="Account Line Beta">
                    <div attrs="{'invisible':[('not_result','=',False)]}" class="oe_text_left show_error" style="height: 30px; border-bottom: 1px solid #DD0000;border-top: 1px solid #DD0000; background-color: #FAD7D7; padding: 4px; margin-bottom: 30px;">
                        <div class="oe_inline" style="float: left;">
                            <span class="fa fa-warning" style="color: #DD0000;"/><span style="font-weight: bold !important;"> Not results found, please check the month, year and the line beta value of each account tax used.</span>
                        </div>
                        <div class="oe_right fa fa-close" style="font-weight: bold !important; cursor: pointer; color: #DD0000;"
                            onclick="javascript:$($.find('.show_error')).slideUp();"/>
                    </div>
                    <div style="margin-bottom: 50px;">
                        <label for="month" style="font-weight: bold;">Month</label>
                        <field name="month" style="width: 130px !important; margin-right: 30px;"/>
                        <label for="year" style="font-weight: bold;">Year</label>
                        <field name="year" style="width: 130px !important; margin-right: 30px;"/>
                        <label for="file_format" style="font-weight: bold;">File format</label>
                        <field name="file_format" style="width: 130px !important; margin-right: 30px;"/>
                        <br/>
                        <br/>
                        <label for="tax_ids" style="font-weight: bold;">Taxes</label>
                        <field name="tax_ids" style="width: 450px !important; margin-right: 20px;" widget="many2many_tags" options="{'no_create': True}"/>

                        <!--<label for="show_all" style="font-weight: bold;">Show all</label>
                        <field name="show_all" />-->
                        <!--

                        <label for="invoice_type" style="font-weight: bold;">Invoice type</label>
                        <field name="invoice_type" style="width: 200px !important; margin-right: 20px;"/>
-->
                    </div>
                    <div>
                        <span class="fa fa-file-excel-o" style="width: 40px; font-size: 28px;" attrs="{'invisible':['|',('file_format','!=','csv'),('file_name','=',False)]}"/>
                        <span class="fa fa-file-text-o" style="width: 40px; font-size: 28px;" attrs="{'invisible':['|',('file_format','!=','txt'),('file_name','=',False)]}"/>
                        <span style="font-size: 20px;">
                            <field name="file_name" invisible="1"/>
                            <field name="file" nolabel="1" readonly="1" filename="file_name" states="exported"/>
                            <field name="state" invisible="1"/>
                            <field name="not_result" invisible="1"/>
                        </span>
                    </div>
                    <footer>
                        <button string="Next" type="object" name="action_next" class="oe_highlight" states="init"/>
                        <button string="Cancel" special="cancel" class="oe_link" states="init"/>
                        <button string="Back" type="object" name="action_back" class="oe_highlight" states="exported"/>
                        <button string="Close" special="cancel" class="oe_link" states="exported"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_account_line_beta_wzd">
            <field name="name">Account Line Beta</field>
            <field name="res_model">account.line.beta.wzd</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_informes_legales_root" name="Informes Legales" parent="account.menu_finance_reports" sequence="5"/>
        <menuitem action="action_account_line_beta_wzd" id="menu_account_line_beta_wzd" parent="menu_informes_legales_root" sequence="10"/>

    </data>
</odoo>
