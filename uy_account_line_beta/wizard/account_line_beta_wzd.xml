<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_line_beta_wzd_form" model="ir.ui.view">
            <field name="name">account.line.beta.wzd.form</field>
            <field name="model">account.line.beta.wzd</field>
            <field name="arch" type="xml">
                <form string="Formulario 2/181">
                    <div class="oe_text_left show_error" invisible="not_result == False" style="height: 30px; border-bottom: 1px solid #DD0000;border-top: 1px solid #DD0000; background-color: #FAD7D7; padding: 4px; margin-bottom: 30px;">
                        <div class="oe_inline" style="float: left;">
                            <span class="fa fa-warning" style="color: #DD0000;"/>
                            <span style="font-weight: bold !important;">
                                No hay resultado, por favor verfique el mes, año y valor de la línea beta de cada cuenta de impuestos utilizada.
                            </span>
                        </div>
                        <div class="oe_right fa fa-close" onclick="javascript:$($.find('.show_error')).slideUp();" style="font-weight: bold !important; cursor: pointer; color: #DD0000;"/>
                    </div>
                    <div style="margin-bottom: 50px;">
                        <label for="month" style="font-weight: bold;">
                            Month
                        </label>
                        <field name="month" style="width: 130px !important; margin-right: 30px;"/>
                        <label for="year" style="font-weight: bold;">
                            Year
                        </label>
                        <field name="year" style="width: 130px !important; margin-right: 30px;"/>
                        <label for="file_format" style="font-weight: bold;">
                            File format
                        </label>
                        <field name="file_format" style="width: 130px !important; margin-right: 30px;"/>
                        <br/>
                        <br/>
                        <label for="tax_ids" style="font-weight: bold;">
                            Taxes
                        </label>
                        <field name="tax_ids" options="{'no_create': True}" style="width: 450px !important; margin-right: 20px;" widget="many2many_tags"/>
                        <!--<label for="show_all" style="font-weight: bold;">Show all</label>
                        <field name="show_all" />-->
                        <!--

                        <label for="invoice_type" style="font-weight: bold;">Invoice type</label>
                        <field name="invoice_type" style="width: 200px !important; margin-right: 20px;"/>
-->
                    </div>
                    <div>
                        <span class="fa fa-file-excel-o" invisible="file_format != 'csv' or file_name == False" style="width: 40px; font-size: 28px;"/>
                        <span class="fa fa-file-text-o" invisible="file_format != 'txt' or file_name == False" style="width: 40px; font-size: 28px;"/>
                        <span style="font-size: 20px;">
                            <field invisible="1" name="file_name"/>
                            <field filename="file_name" invisible="state not in ['exported']" name="file" nolabel="1" readonly="1"/>
                            <field invisible="1" name="state"/>
                            <field invisible="1" name="not_result"/>
                        </span>
                    </div>
                    <footer>
                        <button class="oe_highlight" invisible="state not in ['init']" name="action_next" string="Next" type="object"/>
                        <button class="oe_link" invisible="state not in ['init']" special="cancel" string="Cancel"/>
                        <button class="oe_highlight" invisible="state not in ['exported']" name="action_back" string="Back" type="object"/>
                        <button class="oe_link" invisible="state not in ['exported']" special="cancel" string="Close"/>
                    </footer>
                </form></field>
        </record>
        <record id="action_account_line_beta_wzd" model="ir.actions.act_window">
            <field name="name">Formulario 2/181</field>
            <field name="res_model">account.line.beta.wzd</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_informes_legales_root" name="Informes Legales" parent="account.menu_finance_reports" sequence="3"/>
        <menuitem action="action_account_line_beta_wzd" id="menu_account_line_beta_wzd" parent="menu_informes_legales_root" sequence="10"/>
    </data>
</odoo>
